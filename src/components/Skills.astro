---
type Skill = {
    name: string;
    logo: string;
}

const { skills } = Astro.props as { skills: Skill[] };
---

<section class="skills-section">
    <h2 class="section-title">Skills & Technologies</h2>
    <div class="skills-grid">
        {skills.map((skill) => (
            <div class="skill-card" title = {skill.name}>
                <img src = {skill.logo} alt = {skill.name} class = "skill-logo" />
            </div>
        ))}
    </div>
</section>

<style>
    .skills-section {
        padding: 3rem 0;
        text-align:center;
    }

    .section-title {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: var(--text-1);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
        gap: 1.5rem;
        justify-items: center;
    }

    .skill-card {
        background: var(--surface-2);
        padding: 1rem;
        border-radius: 10px;
        border: 1px solid var(--border);
        transition: all 0.3 ease;
    }

    .skill-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .skill-text {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-1);
    }

    .skill-logo {
        width: 48px;
        height: 48px;
        object-fit: contain;
    }
</style> 