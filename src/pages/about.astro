---
import BaseLayout from "../layouts/BaseLayout.astro"
import Skills from "../components/Skills.astro"
import ContentContainer from "../components/ContentContainer.astro"

const pageTitle = "About Me";

const identity = {
    firstName: "Joshua",
    country: "Texas",
    occupation: "Software Engineer",
    company: "Google",
    hobbies: ["coding", "chess", "piano", "SHRIMP GAMES"],
};

const skills = ["C++", "Python", "HTML/CSS/JS", "Frontend: React/Next", "Backend: Node/Flask", "Databases: Postgres/MongoDB", "Linux"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";

const finished = false;
---

<BaseLayout pageTitle={pageTitle}>
    <ContentContainer align="center">
        <section class="about-hero">
            <h1 class="about-title">About Me</h1>
            <div class="about-content">
                <div class="about-text">
                    <p class="intro">Hi, I'm {identity.firstName}! I'm a {identity.occupation} based in {identity.country}, currently interning at {identity.company}.</p>
                    <div class="hobbies-section">
                        <h2>My Hobbies</h2>
                        <div class="hobbies-grid">
                            {identity.hobbies.map((hobby) => (
                                <div class="hobby-card">
                                    <span>{hobby}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </ContentContainer>

    <Skills skills={skills} />
</BaseLayout>

<style>
    .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .about-hero {
        padding: 4rem 0;
        text-align: center;
    }

    .about-title {
        font-size: 3.5rem;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, var(--text-1) 0%, var(--text-2) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .about-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .intro {
        font-size: 1.25rem;
        line-height: 1.6;
        color: var(--text-2);
        margin-bottom: 2rem;
    }

    .hobbies-section {
        margin-top: 3rem;
    }

    .hobbies-section h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: var(--text-1);
    }

    .hobbies-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
    }

    .hobby-card {
        background: var(--surface-2);
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid var(--border);
    }

    .hobby-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .hobby-card span {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-1);
    }

    @media (max-width: 768px) {
        .about-title {
            font-size: 2.5rem;
        }

        .intro {
            font-size: 1.1rem;
        }

        .hobbies-grid {
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        }
    }
</style>